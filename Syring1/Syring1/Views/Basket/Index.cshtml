@using Syring1.ViewModels.Basket
@model BasketIndexViewModel



<!-- main starts -->
<main>
    <!-- main-frame section starts -->
    <section class="main-frame-2 no-select" style="background-image: url(assets/images/cart-frame.jpg);">
        <div class="main-frame-2-title">
            <div class="container">
                <div class="row text-center">
                    <div class="col-md-12">
                        <div class="main-frame-2-title-text custom-title-text">
                            Cart
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="main-frame-2-breadcrumb">
                            Home / Cart
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- main-frame section ends -->
    <!-- product-table section starts -->
    <section class="product-table no-select">
        <div class="container">
            <table>
                <tbody>

                    @foreach (var basketProduct in Model.BasketProducts)
                    {
                        <div class="card rounded-3 mb-4 basketProduct" id=@basketProduct.Id>
                            <div class="card-body p-4">
                                <div class="row d-flex justify-content-between align-items-center">

                                    <div class="col-md-2 col-lg-2 col-xl-2">
                                        <img src="~/assets/img/@basketProduct.PhotoName"
                                         class="img-fluid rounded-3" alt="Cotton T-shirt">
                                    </div>



                                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex">


                                        <button data-id="@basketProduct.Id" id="downcount">
                                            <i class="fas fa-minus"> </i>
                                        </button>

                                        <input id="form1" min="0" name="quantity" value="@basketProduct.Quantity" type="number" class="form-control form-control-sm" />

                                        <button data-id="@basketProduct.Id" id="upcount" class="btn btn-link px-2"
                                            onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                            <i class="fas fa-plus"> </i>
                                        </button>
                                    </div>

                                    <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                        <h5 class="mb-0">$@basketProduct.Price</h5>
                                    </div>

                                    <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                        <button id="deleteButton" data-id="@basketProduct.Id" class="text-danger"><i class="fas fa-trash fa-lg"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>

            <section class="product-table no-select">
                <div class="container">
                    <form asp-action="clear" asp-controller="basket" class="pr-form" style="display: block;">
                        <div class="row cart-buttons">

                            <div class="col-12 col-xl-4 text-center text-lg-right mt-0 mt-sm-5 mt-xl-0">

                                <button class="button clear " id="dltbasket">Clear Cart</button>

                            </div>

                        </div>
                    </form>
                </div>
            </section>


            <p class="empty-cart-alert">Your basket is currently empty.</p>
            <a href="sidebar-left.html" class="return-btn button">Return To Shop</a>
        </div>
    </section>
    <!-- product-table section ends -->

</main>
