@using Syring1.ViewModels.Account
@model AccountRegisterViewModel


<!-- main starts -->
<main>
    <!-- main-frame section starts -->
    <section class="main-frame-2 no-select" style="background-image: url(assets/images/cart-frame.jpg);">
        <div class="main-frame-2-title">
            <div class="container">
                <div class="row text-center">
                    <div class="col-md-12">
                        <div class="main-frame-2-title-text custom-title-text">
                            Register
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="main-frame-2-breadcrumb">
                            Home / Register
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- main-frame section ends -->
    <!-- product-table section starts -->
    <section class="register my-5 no-select">
        <div class="container">
            <form method="post" class="register-form" asp-action="register" asp-controller="account">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Fullname"></label>
                    <input asp-for="Fullname" class="form-control" type="text" placeholder="Fullname">
                    <span asp-validation-for="Fullname"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" type="text" placeholder="Email">
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" type="text" placeholder="Username">
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" type="text" placeholder="Password">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" type="text" placeholder="Confirm password">
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <button class="btn btn-primary">Register</button>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <div>
                        <span>Already have an account?</span> <a asp-action="login" asp-controller="account">Login now</a>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- product-table section ends -->


</main>
<!-- main ends -->
