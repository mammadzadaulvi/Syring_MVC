@using Syring1.Areas.Admin.ViewModels.MedicalDepartment
@model MedicalDepartmentIndexViewModel

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Medical Department</h4>
                        <a class="btn btn-primary" asp-action="create" asp-controller="medicaldepartment" asp-area="admin">CREATE medicaldepartment</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Photo</th>
                                        <th>Actions</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ourVision in Model.MedicalDepartments)
                                    {
                                        <tr>
                                            <td>@ourVision.Id</td>
                                            <td>@ourVision.Title</td>
                                            <td>@ourVision.Description</td>
                                            <td><img src="~/assets/img/@ourVision.PhotoPath" /></td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="medicaldepartment" asp-area="admin" asp-route-id="@ourVision.Id">Update</a>
                                                <a class="btn btn-danger" onclick="confirm('Eminsinizmi?')" asp-action="delete" asp-controller="medicaldepartment" asp-area="admin" asp-route-id="@ourVision.Id">Delete</a>
                                                <a class="btn btn-info" asp-action="details" asp-controller="medicaldepartment" asp-area="admin" asp-route-id="@ourVision.Id">Details</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



