@using Syring1.Areas.Admin.ViewModels.MedicalDepartment
@model MedicalDepartmentDetailsViewModel


<div class="col-lg-12 grid-margin ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Medical Department Details</h4>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Photo</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Id</td>
                        <td>@Model.Title</td>
                        <td>@Model.Description</td>
                        <td><img src="~/assets/img/@Model.PhotoPath" /></td>
                    </tr>
                </tbody>
            </table>
            <a asp-action="index" asp-controller="medicaldepartment" class="btn btn-info">Cancel</a>
        </div>
    </div>
</div>