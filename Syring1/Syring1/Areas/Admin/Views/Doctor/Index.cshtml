@using Syring1.Areas.Admin.ViewModels.Doctor
@model DoctorIndexViewModel

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Doctor</h4>
                        <a class="btn btn-primary" asp-action="create" asp-controller="doctor" asp-area="admin">CREATE doctor</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>FullName</th>
                                        <th>Position</th>
                                        <th>Qualification</th>
                                        <th>ContactPhone</th>
                                        <th>ContactEmail</th>
                                        <th>WorkingDay</th>
                                        <th>WorkingHour</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>SubDescription</th>
                                        <th>Skill</th>
                                        <th>Photo</th>
                                        <th>CoverPhoto</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var doctor in Model.Doctors)
                                    {
                                        <tr>
                                            <td>@doctor.Id</td>
                                            <td>@doctor.FullName</td>
                                            <td>@doctor.Position</td>
                                            <td>@doctor.Qualification</td>
                                            <td>@doctor.ContactPhone</td>
                                            <td>@doctor.ContactEmail</td>
                                            <td>@doctor.WorkingDay</td>
                                            <td>@doctor.WorkingHour</td>
                                            <td>@doctor.Title</td>
                                            <td>@doctor.Description</td>
                                            <td>@doctor.SubDescription</td>
                                            <td>@doctor.Skill</td>
                                            <td><img src="~/assets/img/@doctor.PhotoPath" /></td>
                                            <td><img src="~/assets/img/@doctor.CoverPhotoPath" /></td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="doctor" asp-area="admin" asp-route-id="@doctor.Id">Update</a>
                                                <a class="btn btn-danger" onclick="confirm('Eminsinizmi?')" asp-action="delete" asp-controller="doctor" asp-area="admin" asp-route-id="@doctor.Id">Delete</a>
                                                <a class="btn btn-info" asp-action="details" asp-controller="doctor" asp-area="admin" asp-route-id="@doctor.Id">Details</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>