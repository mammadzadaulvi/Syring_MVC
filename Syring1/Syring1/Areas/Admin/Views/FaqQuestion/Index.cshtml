@using Syring1.Areas.Admin.ViewModels.FaqQuestion
@model FaqQuestionIndexViewModel




<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Faq Question</h4>
                        <a class="btn btn-primary" asp-action="create" asp-controller="faqquestion" asp-area="admin">CREATE faqcategory</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>FaqCategoryId</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.FaqQuestions != null)
                                    {

                                        @foreach (var faqQuestion in Model.FaqQuestions)
                                        {
                                            <tr>
                                                <td>@faqQuestion.Id</td>
                                                <td>@faqQuestion.Title</td>
                                                <td>@faqQuestion.Description</td>
                                                <td>@faqQuestion.FaqCategoryId</td>
                                                <td>
                                                    <a class="btn btn-primary" asp-action="update" asp-controller="faqquestion" asp-area="admin" asp-route-id="@faqQuestion.Id">Update</a>
                                                    <a class="btn btn-danger" onclick="confirm('Eminsinizmi?')" asp-action="delete" asp-controller="faqquestion" asp-area="admin" asp-route-id="@faqQuestion.Id">Delete</a>
                                                    <a class="btn btn-info" asp-action="details" asp-controller="faqquestion" asp-area="admin" asp-route-id="@faqQuestion.Id">Details</a>
                                                </td>
                                            </tr>
                                        }

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

