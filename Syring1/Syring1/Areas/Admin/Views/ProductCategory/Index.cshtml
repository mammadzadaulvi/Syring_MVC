@using Syring1.Areas.Admin.ViewModels.ProductCategory
@model ProductCategoryIndexViewModel


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Product Category</h4>
                        <a class="btn btn-primary" asp-action="create" asp-controller="productcategory" asp-area="admin">CREATE productcategory</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Actions</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.ProductCategories != null)
                                    {

                                        @foreach (var productCategory in Model.ProductCategories)
                                        {
                                            <tr>
                                                <td>@productCategory.Id</td>
                                                <td>@productCategory.Title</td>
                                                <td>
                                                    <a class="btn btn-primary" asp-action="update" asp-controller="productcategory" asp-area="admin" asp-route-id="@productCategory.Id">Update</a>
                                                    <a class="btn btn-danger" onclick="confirm('Eminsinizmi?')" asp-action="delete" asp-controller="productcategory" asp-area="admin" asp-route-id="@productCategory.Id">Delete</a>
                                                </td>
                                            </tr>
                                        }

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>