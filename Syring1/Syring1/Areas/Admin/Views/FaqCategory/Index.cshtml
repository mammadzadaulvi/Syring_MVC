@using Syring1.Areas.Admin.ViewModels.FaqCategory
@model FaqCategoryIndexViewModel




<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Faq Category</h4>
                        <a class="btn btn-primary" asp-action="create" asp-controller="faqcategory" asp-area="admin">CREATE faqcategory</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Description</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var faqCategory in Model.FaqCategories)
                                    {
                                        <tr>
                                            <td>@faqCategory.Id</td>
                                            <td>@faqCategory.Title</td>
                                            <td>@faqCategory.Description</td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="faqcategory" asp-area="admin" asp-route-id="@faqCategory.Id">Update</a>
                                                <a class="btn btn-danger" onclick="confirm('Eminsinizmi?')" asp-action="delete" asp-controller="faqcategory" asp-area="admin" asp-route-id="@faqCategory.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





