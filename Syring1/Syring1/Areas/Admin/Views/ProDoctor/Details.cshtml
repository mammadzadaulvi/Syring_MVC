@using Syring1.Areas.Admin.ViewModels.ProDoctor
@model ProDoctorDetailsViewModel


<div class="col-lg-12 grid-margin ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Home Doctor Details</h4>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Fullname</th>
                        <th>Icon</th>
                        <th>Status</th>
                        <th>Photo</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Id</td>
                        <td>@Model.FullName</td>
                        <td>@Model.Icon</td>
                        <td>@Model.Status</td>
                        <td><img src="~/assets/img/@Model.PhotoPath" /></td>
                    </tr>
                </tbody>
            </table>
            <a asp-action="index" asp-controller="prodoctor" class="btn btn-info">Cancel</a>
        </div>
    </div>
</div>