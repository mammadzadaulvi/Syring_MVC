@using Syring1.Areas.Admin.ViewModels.ProDoctor
@model ProDoctorIndexViewModel


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Home Doctor</h4>
                        <a class="btn btn-primary" asp-action="create" asp-controller="prodoctor" asp-area="admin">CREATE prodoctor</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>FullName</th>
                                        <th>Icon</th>
                                        <th>Status</th>
                                        <th>Photo</th>
                                        <th>Actions</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var proDoctor in Model.ProDoctors)
                                    {
                                        <tr>
                                            <td>@proDoctor.Id</td>
                                            <td>@proDoctor.FullName</td>
                                            <td>@proDoctor.Icon</td>
                                            <td>@proDoctor.Status</td>
                                            <td><img src="~/assets/img/@proDoctor.PhotoPath" /></td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="prodoctor" asp-area="admin" asp-route-id="@proDoctor.Id">Update</a>
                                                <a class="btn btn-danger" onclick="confirm('Eminsinizmi?')" asp-action="delete" asp-controller="prodoctor" asp-area="admin" asp-route-id="@proDoctor.Id">Delete</a>
                                                <a class="btn btn-info" asp-action="details" asp-controller="prodoctor" asp-area="admin" asp-route-id="@proDoctor.Id">Details</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>