@using Syring1.Areas.Admin.ViewModels.HomeCoverVideo
@model HomeCoverVideoIndexViewModel


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Home Cover Video</h4>

                        @{
                            if (Model.HomeCoverVideo == null)
                            {
                                <a class="btn btn-primary" asp-action="create" asp-controller="homecovervideo" asp-area="admin">CREATE homecovervideo</a>
                            }
                            else
                            {
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Url</th>
                                                <th>Photo</th>
                                                <th>Actions</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>@Model.HomeCoverVideo.Id</td>
                                                <td>@Model.HomeCoverVideo.Url</td>
                                                <td><img src="~/assets/img/@Model.HomeCoverVideo.CoverPhoto" /></td>
                                                <td>
                                                    <a class="btn btn-primary" asp-action="update" asp-controller="homecovervideo" asp-area="admin" asp-route-id="@Model.HomeCoverVideo.Id">Update</a>
                                                    <a class="btn btn-danger" onclick="confirm('Eminsinizmi?')" asp-action="delete" asp-controller="homecovervideo" asp-area="admin" asp-route-id="@Model.HomeCoverVideo.Id">Delete</a>
                                                    <a class="btn btn-info" asp-action="details" asp-controller="homecovervideo" asp-area="admin" asp-route-id="@Model.HomeCoverVideo.Id">Details</a>
                                                </td>
                                            </tr>
                                            @*}*@
                                        </tbody>
                                    </table>
                                </div>

                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





