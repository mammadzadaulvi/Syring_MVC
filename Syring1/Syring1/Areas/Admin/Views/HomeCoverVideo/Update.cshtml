@using Syring1.Areas.Admin.ViewModels.HomeCoverVideo
@model HomeCoverVideoUpdateViewModel

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Update Home Cover Video
                        </p>
                        <form enctype="multipart/form-data" method="post" asp-action="update" asp-controller="homecovervideo" asp-area="admin" class="forms-sample">
                           
                            <div class="form-group">
                                <label asp-for="Url">Url</label>
                                <input class="form-control" asp-for="Url">
                                <span asp-validation-for="Url"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Photo">Photo</label>
                                <input class="form-control" asp-for="Photo">
                                <span asp-validation-for="Photo"></span>
                            </div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a class="btn btn-danger" asp-action="index" asp-controller="homecovervideo" asp-area="admin"> Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
