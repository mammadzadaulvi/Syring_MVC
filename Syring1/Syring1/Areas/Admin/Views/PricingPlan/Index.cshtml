@using Syring1.Areas.Admin.ViewModels.PricingPlan
@model PricingPlanIndexViewModel


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Pricing Plan</h4>
                        <a class="btn btn-primary" asp-action="create" asp-controller="pricingplan" asp-area="admin">CREATE prodoctor</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Price</th>
                                        <th>Skill</th>
                                        <th>Status</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var proDoctor in Model.PricingPlans)
                                    {
                                        <tr>
                                            <td>@proDoctor.Id</td>
                                            <td>@proDoctor.Title</td>
                                            <td>@proDoctor.Description</td>
                                            <td>@proDoctor.Price</td>
                                            <td>@proDoctor.Skill</td>
                                            <td>@proDoctor.Status</td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="pricingplan" asp-area="admin" asp-route-id="@proDoctor.Id">Update</a>
                                                <a class="btn btn-danger" onclick="confirm('Eminsinizmi?')" asp-action="delete" asp-controller="pricingplan" asp-area="admin" asp-route-id="@proDoctor.Id">Delete</a>
                                                <a class="btn btn-info" asp-action="details" asp-controller="pricingplan" asp-area="admin" asp-route-id="@proDoctor.Id">Details</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

