@using Syring1.Areas.Admin.ViewModels.PricingPlan
@using static Syring1.Models.PricingPlan
@model PricingPlanCreateViewModel

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Create Pricing Plan
                        </p>
                        <form enctype="multipart/form-data" method="post" asp-action="create" asp-controller="pricingplan" asp-area="admin" class="forms-sample">

                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <input class="form-control" asp-for="Title">
                                <span asp-validation-for="Title"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <textarea class="form-control" asp-for="Description"></textarea>
                                <span asp-validation-for="Description"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price">Price</label>
                                <input class="form-control" asp-for="Price">
                                <span asp-validation-for="Price"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Skill">Skill</label>
                                <textarea class="form-control" asp-for="Skill"></textarea>
                                <span asp-validation-for="Skill"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Status"></label>
                                <select asp-for="@Model.Status" asp-items="Html.GetEnumSelectList<PriceStatus>()"></select>
                                <span asp-validation-for="Status"></span>
                            </div>

                          

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a class="btn btn-danger" asp-action="index" asp-controller="pricingplan" asp-area="admin"> Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts{

    <script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Skill'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>
}