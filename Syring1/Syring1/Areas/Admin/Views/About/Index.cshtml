@using Syring1.Areas.Admin.ViewModels.About
@model AboutIndexViewModel


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">About</h4>

                        @if (Model.About != null)
                        {
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Title</th>
                                            <th>Description</th>
                                            <th>SignPhoto</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <tr>
                                            <td>@Model.About.Id</td>
                                            <td>@Model.About.Title</td>
                                            <td>@Html.Raw(Model.About.Description)</td>
                                            <td><img src="~/assets/img/@Model.About.SignPhotoName" /></td>

                                            <td>

                                                <a class="btn btn-primary " asp-action="update" asp-controller="about" asp-area="admin" asp-route-id=@Model.About.Id>Update</a>
                                                <a class="btn btn-primary btn-danger " onclick="confirm('eminsinizmi?')" asp-action="delete" asp-controller="about" asp-area="admin" asp-route-id=@Model.About.Id>Delete</a>
                                                <a class="btn btn-primary btn-details " asp-action="details" asp-controller="about" asp-area="admin" asp-route-id=@Model.About.Id>Details</a>
                                            </td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <a class="btn btn-primary" asp-action="create" asp-controller="about" asp-area="admin">CREATE HomeMain Slider!</a>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>